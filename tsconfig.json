{
  "include": ["src", "./index.ts"],
  "exclude": [
    "node_modules",
    ".gitignore",
  ],
  "compilerOptions": {
    "outDir": "./build",
    "module": "commonjs",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  }
}
